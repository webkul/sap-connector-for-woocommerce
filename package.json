{
  "name": "sap-connector-for-woocommerce",
  "version": "1.0.0",
  "main": "gulpfile.js",
  "scripts": {
    "npx-update": "npx npm-check-updates -u",
    "npm_install": "npm i",
	"build": "gulp",
	"check-engines": "wp-scripts check-engines",
	"phpcbf": "cd $VAR && $PWD/.config/composer/vendor/squizlabs/php_codesniffer/bin/phpcbf --standard=$INIT_CWD/phpcs.xml --severity=1 --ignore-annotations --extensions=php,html $INIT_CWD/",
	"phpcs": "mkdir -p phpcs-reports && cd $VAR && $PWD/.config/composer/vendor/squizlabs/php_codesniffer/bin/phpcs --standard=$INIT_CWD/phpcs.xml --severity=1 --ignore=*/wk_caching/* --report-source --report-xml=$INIT_CWD/phpcs-reports/phpcs-report-$(date \"+%Y-%m-%dT%H:%M:%S\").xml --ignore-annotations --extensions=php,html $INIT_CWD/",
	"phpcbf-phpcs": "npm run phpcbf && npm run phpcs",
	"make-pot": "php -d xdebug.max_nesting_level=512 $(which wp) i18n make-pot --exclude=\"node_modules/,languages/,wk_caching/,.gitignore,.gitmodules,.gulpfile.js,.git,.webpack.config.js,package.json,package-lock.json,phpcs.xml,phpmd.xml,license.txt,readme.txt,assets/,$npm_package_name/\" --headers='{\"Report-Msgid-Bugs-To\":\"https://wordpress.org/support/plugin/sap-connector-for-woocommerce/\", \"language-team\":\"LANGUAGE <EMAIL@ADDRESS>\"}' . languages/sap-connector-for-woocommerce.pot",
	"zip": "rm -f $npm_package_name.zip && npm run make-pot && mkdir -p $npm_package_name && cp -r assets/ helpers/ includes/ languages/ templates/ index.php readme.txt gulpfile.js package.json phpcs.xml  $npm_package_name.php $npm_package_name && zip -r $npm_package_name.zip $npm_package_name && rm -r $npm_package_name"
  },
  "devDependencies": {
		"@wordpress/scripts": "^31.0.0",
		"webpack": "^5.103.0",
		"webpack-cli": "^6.0.1",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-rename": "^2.1.0",
		"gulp-watch": "^5.0.1",
    	"gulp-terser": "^2.1.0",
		"gulp-less":"^5.0.0"
	},
  "description": "SAP Connector for WooCommerce"
}
